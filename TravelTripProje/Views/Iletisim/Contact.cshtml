
@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

    <div class="contact">
        <div class="wrap">
            <div class="contact-top">
                <h3>İletişim Bilgileri</h3>
                <p>Aklınızdaki tüm sorulara  cevap bulmak için burdayız. Ne zaman takıldığınız bir konu varsa bize yazabilirsiniz...</p>
            </div>
            <div class="form">
                <form class="cmxform" id="contactForm" method="post" action="/Iletisim/Gonder">
                    <div>
                        <input type="text" class="textbox" placeholder="Ad Soyad" name="name">
                    </div>
                    <div>
                        <input type="text" class="textbox" placeholder="Email" name="email">
                    </div>
                    <div>
                        <input type="text" class="textbox" placeholder="Telefon" name="telefon">
                    </div>

                    <div class="form1">
                        <div>
                            <textarea value="Mesaj" placeholder="Mesaj" name="message"></textarea>
                        </div>
                    </div>
                    @using (Html.BeginForm("Contact", "Iletisim", FormMethod.Post))
                    {
                        <input type="submit" id="recaptaControl" value="GÖNDER" class="btn btn-info btn-block"  data-callback="onSubmit" required>
                    }

                </form>
            </div>
           
            <div class="clear"></div>
            @Html.Action("PartialAdres","Iletisim")   
            <div class="clear"></div>
        </div>
    </div>
